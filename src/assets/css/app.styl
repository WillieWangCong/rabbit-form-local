  @import './common.styl';
  *{
    margin: 0;
    padding: 0;
    list-style: none;
    font-weight: normal;
  }

  .dragFrost{
    opacity: 0.5;
  }
  .dragStart{
    position: fixed!important;    
    z-index 100;
    cursor: move;
  }
  .dragEnd{
    transition: all 0.3s;
  }
  .error{
    color: #f00;
    font-size: toRem(12);
  }
  #app {
    .header{
      width: 100%;
      height: toRem(50);
      line-height: toRem(50);      
      background: #394264;
      padding-left toRem(20);
      padding-right toRem(20);
      box-sizing: border-box;
      .title{
        font-size: toRem(14);
        color: #fff;
        float: left;
      }
      .close{
        float: right;
        width: toRem(8);
        margin-top: toRem(20);
        cursor: pointer;
      }
    }
    .design_body{ 
      & > div{
        height: 100%;
        border-right: toRem(5) solid #f3f3f3;
        box-sizing: border-box;        
      }
      .col_left{
        float:left;
        width: 20%;
        overflow-y: auto;
        ul{
          width:96%;
          margin: toRem(10) auto;
          li{
            width: 30%;
            float: left;
            margin-left 2.5%;
            margin-top: 2.5%;
            border 1px dashed rgba(0,0,0,0);
            cursor: move;
            border-radius: toRem(5);
            overflow: hidden;
            &:hover{
                border 1px dashed #264fee;
            }        
          }    
        }              
      }  
      .col_middle{
        float:left;
        width: 60%;
        height: 100%;
        .form_operate_group{
          height: toRem(60);          
          background: #f3fbff;          
          button{            
            padding: 0;
            float: right;
            margin: toRem(20) toRem(10) auto auto;    
            width: toRem(80);
            height: toRem(40);
            line-height: toRem(25);
            text-indent: 1em; 
            box-sizing: border-box;  
            outline: none;   
            &.preview{
              background: url('../images/f-icon-18-d.png') toRem(4) center no-repeat #fff;       
              background-size toRem(14 * 1.3) toRem(13 * 1.3);
              border: 1px solid #ccc;
              color: #525252;
              cursor: pointer;
              &:hover{
                background: url('../images/f-icon-18.png') toRem(4) center no-repeat #fff;       
                background-size toRem(14 * 1.3) toRem(13 * 1.3);
                border: 1px solid #55c0f3;
                color: #55c0f3;
              }
            }
            &.save{
              background: url('../images/f-icon-19-d.png') toRem(4) center no-repeat #fff;       
              background-size toRem(13 * 1.3) toRem(13 * 1.3);
              border: 1px solid #ccc;
              color: #525252;
              cursor: pointer;
              &:hover{
                background: url('../images/f-icon-19.png') toRem(4) center no-repeat #fff;       
                background-size toRem(13 * 1.3) toRem(13 * 1.3);
                border: 1px solid #55c0f3;
                color: #55c0f3;
              }
            }
            &.issue{
              background: url('../images/f-icon-20.png') toRem(4) center no-repeat #55c0f3;       
              background-size toRem(13 * 1.3) toRem(13 * 1.3);
              border: 1px solid #55c0f3;
              color: #fff;
              cursor: pointer;
            }
          }
        }
        .drag_area{
          width: 100%;
          height: 100%;
          overflow-y: auto;
          li{
            width: 100%;            
            &:hover{
              border: 1px dashed #ddd;
              box-sizing: border-box;
            }
          }        
        }
      }  
      .col_right{
        overflow-y: auto;
        float:left;
        width: 20%;
        height: 100%;
        border: none;
      }  
    }
    & > .tips{
      position: fixed;
      top:toRem(50);
      left: 0;
      width 100%;
      padding: toRem(8) 0;
      font-size: toRem(14);
      text-align: center; 
      color: #fff;
      transition: all 0.3s;
    }
    & > .tips.error{
      background:rgba(255,0,0,0.8);
    }
    & > .tips.pass{
      background:rgba(28,233,105,0.8);
    }
  }
