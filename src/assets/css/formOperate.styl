@import './common.styl';
.form_operate{
    position: absolute;
    right: toRem(20);
    z-index 2;
    bottom: toRem(-15);
    li{
        float: left;
        width: toRem(30)!important;
        height: toRem(30)!important;
        box-shadow: 0px 0px toRem(5) rgba(0,0,0,0.5);
        border-radius: 50%;
        margin-left toRem(10);
        background: #fff;
        cursor: pointer;
        img{
            width: toRem(14);
            height: toRem(14);
            display: block;
            margin: toRem(8) auto;
        }
    }
}